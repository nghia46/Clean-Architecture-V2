    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CleanIsClean.API\CleanIsClean.API.csproj" />
    <ProjectReference Include="..\CleanIsClean.Application\CleanIsClean.Application.csproj" />
    <ProjectReference Include="..\CleanIsClean.Domain\CleanIsClean.Domain.csproj" />
    <ProjectReference Include="..\CleanIsClean.Infrastructure\CleanIsClean.Infrastructure.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Microsoft.VisualStudio.TestTools.UnitTesting" />
  </ItemGroup>

</Project>
